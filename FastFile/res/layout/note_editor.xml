<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<ImageView android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/note_top" />
	<ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
		android:background="#ffffff">
		<view class="ru.megazlo.fastfile.fmNotes$LinedEditText" android:id="@+id/note" android:layout_width="match_parent"
			android:layout_height="match_parent" android:background="@android:color/transparent" android:padding="3dip"
			android:scrollbars="vertical" android:fadingEdge="vertical" android:gravity="top" android:textSize="22sp"
			android:capitalize="sentences" />
	</ScrollView>
</LinearLayout>
