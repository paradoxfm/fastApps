<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="43dip">

    <ImageView android:id="@+id/m_icon"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:contentDescription="@string/cdes"
               android:padding="1dip"/>

    <TextView android:id="@+id/m_txt_dir"
              android:paddingLeft="60dip"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:scrollHorizontally="true"
              android:textColor="@color/fileNameColor"
              android:textSize="18dip"
              android:layout_alignParentTop="true"/>

    <TextView android:id="@+id/m_txt_items"
              android:paddingLeft="48dip"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="11dip"
              android:textColor="@color/fileNameColor"
              android:layout_alignParentBottom="true"/>

    <TextView android:id="@+id/m_txt_date"
              android:paddingRight="10dip"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="11dip"
              android:textColor="@color/fileNameColor"
              android:layout_alignParentBottom="true"
              android:gravity="right"/>

    <ImageView android:id="@+id/m_check"
               android:paddingRight="3dip"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:contentDescription="@string/cdes"
               android:layout_alignParentRight="true"/>

</RelativeLayout>