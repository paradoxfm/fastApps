<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="42dip">

    <ImageView android:id="@+id/m_icon"
               android:layout_width="42dip"
               android:layout_height="42dip"
               android:contentDescription="@string/cdes"
               android:src="@drawable/i_note"
               android:padding="1dip"/>

    <TextView android:id="@+id/m_titile"
              android:paddingLeft="50dip"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:textColor="@color/fileNameColor"
              android:textSize="16dip"
              android:layout_alignParentTop="true"/>

    <TextView android:id="@+id/m_word_count"
              android:paddingLeft="48dip"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="11dip"
              android:textColor="@color/fileNameColor"
              android:layout_alignParentBottom="true"/>

    <ImageView android:id="@+id/m_arrow"
               android:paddingRight="3dip"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:src="@drawable/i_rigth"
               android:contentDescription="@string/cdes"
               android:layout_alignParentRight="true"/>

</RelativeLayout>