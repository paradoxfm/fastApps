<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:fillViewport="true"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<LinearLayout android:padding="10dip" android:layout_width="match_parent" android:layout_height="match_parent"
		android:orientation="vertical" android:fitsSystemWindows="true">
		<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
			android:orientation="horizontal" android:gravity="left|center_vertical">
			<Spinner android:id="@+id/ed_ftp_spin" android:layout_width="210dip" android:layout_height="wrap_content"
				android:layout_gravity="left" android:layout_weight="1" />
			<ImageView android:layout_width="wrap_content" android:id="@+id/ed_ftp_del" android:src="@drawable/close_box_red"
				android:layout_height="wrap_content" android:layout_gravity="right" android:layout_weight="1"></ImageView>
		</LinearLayout>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ftp_host" />
		<EditText android:id="@+id/ed_ftp_host" android:layout_width="match_parent" android:layout_height="wrap_content" />
		<CheckBox android:id="@+id/ed_ftp_anm" android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/ftp_anonym" android:checked="true" />
		<LinearLayout android:id="@+id/ed_ftp_userinf" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:orientation="vertical" android:visibility="gone">
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ftp_user"
				android:textColor="@android:color/white" android:textSize="16dip" />
			<EditText android:id="@+id/ed_ftp_usr" android:layout_width="match_parent" android:layout_height="wrap_content" />
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ftp_pwd"
				android:textColor="@android:color/white" android:textSize="16dip" />
			<EditText android:id="@+id/ed_ftp_pwd" android:layout_width="match_parent" android:layout_height="wrap_content"
				android:password="true" />
		</LinearLayout>
	</LinearLayout>
</ScrollView>
