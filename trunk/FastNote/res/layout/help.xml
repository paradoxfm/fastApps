<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:fillViewport="true"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<LinearLayout android:padding="5dip" android:layout_width="match_parent" android:layout_height="match_parent"
		android:orientation="vertical" android:fitsSystemWindows="true">

		<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
			android:orientation="horizontal" android:gravity="center_vertical">
			<ImageView android:layout_width="40dip" android:layout_height="40dip" android:src="@drawable/qa_mail" />
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/t_csm_itm"
				android:textSize="16dip" android:gravity="center_vertical" android:paddingLeft="10dip" />
		</LinearLayout>
		<ImageView android:src="@android:drawable/divider_horizontal_dim_dark" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:scaleType="fitXY" android:layout_gravity="center_horizontal"
			android:paddingTop="5dip" android:paddingBottom="5dip" />

		<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
			android:orientation="horizontal" android:gravity="center_vertical">
			<ImageView android:layout_width="40dip" android:layout_height="40dip" android:src="@drawable/qa_sms" />
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/t_sms_itm"
				android:textSize="16dip" android:gravity="center_vertical" android:paddingLeft="10dip" />
		</LinearLayout>
		<ImageView android:src="@android:drawable/divider_horizontal_dim_dark" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:scaleType="fitXY" android:layout_gravity="center_horizontal"
			android:paddingTop="5dip" android:paddingBottom="5dip" />

		<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
			android:orientation="horizontal" android:gravity="center_vertical">
			<ImageView android:layout_width="40dip" android:layout_height="40dip" android:src="@drawable/qa_delete" />
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/t_del_itm"
				android:textSize="16dip" android:gravity="center_vertical" android:paddingLeft="10dip" />
		</LinearLayout>

	</LinearLayout>
</ScrollView>